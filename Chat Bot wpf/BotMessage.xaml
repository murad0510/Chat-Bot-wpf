<UserControl x:Class="Chat_Bot_wpf.BotMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat_Bot_wpf"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="650" Background="White">
    <Grid>
        <Canvas>
            <Label Name="Message" Background="#e6e6e6" Canvas.Left="45" Canvas.Top="3">
                <Label.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="40"/>
                    </Style>
                </Label.Resources>
            </Label>
            <Label Name="DateTimeLbl" Background="White" Canvas.Left="45" Canvas.Top="30" Foreground="Gray"></Label>
        </Canvas>
    </Grid>
</UserControl>
