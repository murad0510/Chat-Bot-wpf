<UserControl x:Class="Chat_Bot_wpf.UserMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat_Bot_wpf"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="650" Background="White">
    <Grid>
        <Canvas>
            <Label Name="messageLbl" Background=" #ffccff" Canvas.Left="430" Canvas.Top="3">
                <Label.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="40"/>
                    </Style>
                </Label.Resources>

            </Label>
            <Label Name="DateTimeLbl" Background="White" Foreground="Gray" Canvas.Left="430"  Margin="0,29,0,0"></Label>
        </Canvas>
    </Grid>
</UserControl>
